#!/bin/sh

alias t='task'
alias tc='task context'
alias in='task add +in'
alias tick=tickle
alias think='tickle +1d'
alias review='task add +next +@review'
alias rnr=read-and-review
alias work='task add +next +@work'
alias future='task add +next +@work +@future'

function tickle() {
  local deadline=$1
  shift
  in +tickle wait:$deadline $@
}

function ts() {
  task $1 modify wait:$2
}

function tp() {
  task project:$1
}

function webpage-title() {
  wget -qO- "$*" | hxnormalize -x -l 99999 | hxselect -s '\n' -c 'title' 2>/dev/null
}

function read-and-review() {
  local link="$1"
  local title=$(webpage-title $link)
  echo $title
  local descr="\"Read and review: $title\""
  local id=$(task add +next +rnr "$descr" | sed -n 's/Created task \(.*\)./\1/p')
  task "$id" annotate "$link"
}
