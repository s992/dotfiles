# Taskwarrior program configuration file.
# For more documentation, see http://taskwarrior.org or try 'man task', 'man task-color',
# 'man task-sync' or 'man taskrc'

# Here is an example of entries that use the default, override and blank values
#   variable=foo   -- By specifying a value, this overrides the default
#   variable=      -- By specifying no value, this means no default
#   #variable=foo  -- By commenting out the line, or deleting it, this uses the default

# Use the command 'task show' to see all defaults and overrides

# Color theme 
include ~/dotfiles/apps/taskwarrior/color.theme

# reports
## in
report.in.columns = id,description
report.in.description = Inbox
report.in.filter = status:pending limit:page (+in)
report.in.labels = ID,Description

## next
report.next.filter = status:pending limit:page (-in -rnr -future)

## rnr
report.rnr.columns = id,entry.age,description
report.rnr.description = Read later
report.rnr.filter = status:pending limit:page (-in +rnr)
report.rnr.labels = ID,Age,Description

## future work/notes
report.future.columns = id,entry.age,project,description
report.future.description = Future work or notes
report.future.filter = status:pending limit:page (-in +future)
report.future.labels = ID,Age,Project,Description

# contexts
# context.se = +se
# context.release = +release
# context.work = +work or +review or +release or +se
# context.dev = +dev
# context.review = +review
# context.personal = +personal

# aliases
alias.rm=delete
alias.note=annotate
alias.m=modify

# coefficients / priorities
urgency.user.tag.in.coefficient=15.0
urgency.uda.priority.L.coefficient=0.8
urgency.age.coefficient=0
urgency.tags.coefficient=0
urgency.annotations.coefficient=0
urgency.project.coefficient=0
uda.priority.values=H,,L

# misc
verbose=blank,footnote,label,new-id,new-uuid,affected,edit,special,project,sync,unwait,recur
tasksh.autoclear=1
search.case.sensitive=no

# autogenerated
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING or +in )
